{% if page.show_services %}
    <section id="services" class="alternating-light-gray">
        <div class="container">
            <div class="row">
                <header class="col-lg-12 text-center">
                    <h2 class="section-heading">{{ page.services_title }}</h2>
                    {% if  page.services_subtitle %}
                        <h3 class="section-subheading text-muted">{{ page.services_subtitle }}</h3>
                    {% endif %}
                </header>
            </div>
            <div class="row text-center">
                {% for service in page.services %}
                    {% if service.page %}
                        <a href="{{ service.page }}">
                    {% endif %}
                    <div class="{{ loop.length|bootstrapCol }}">
                                <span class="fa-stack fa-4x">
                                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                                    <i class="fa {{ service.icon }} fa-stack-1x fa-inverse"></i>
                                </span>
                        <h3 class="service-heading">
                            {{ service.name }}
                        </h3>
                        <p class="text-muted">
                            {{ service.description }}
                        </p>
                    </div>
                    {% if service.page %}
                        </a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>
{% endif %}