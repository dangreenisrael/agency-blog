{% if page.show_team %}
    <section id="team" class="alternating-light-gray">
        <div class="container">
            <div class="row">
                <header class="col-lg-12 text-center">
                    <h2 class="section-heading">{{ page.team_title }}</h2>
                    {% if  page.team_subtitle%}
                        <span class="section-subheading text-muted">{{ page.team_subtitle }}</span>
                    {% endif %}
                </header>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 ">
                    <p>
                        {{page.get_field('team_blurb')}}
                    </p>
                </div>
            </div>
            <div class="row">
                {% for team_member in team_members %}
                    <div class="{{ loop.length|bootstrapCol }}">
                        <div class="team-member">
                            <img src="{{ TimberImage(team_member.picture).src }}" class="img-responsive img-circle" alt="Profile picture for {{ team_member.name }}">
                            <h4>{{ team_member.name }}</h4>
                            <p class="text-muted">{{ team_member.role }}</p>
                            <div class="text-center">{{ team_member.bio }}</div>
                            <ul class="list-inline social-buttons">
                                {% if team_member.twitter %}
                                    <li><a href="{{ team_member.twitter }}"><i class="fa fa-twitter"></i></a>
                                    </li>
                                {% endif %}
                                {% if team_member.facebook %}
                                    <li><a href="{{ team_member.facebook }}"><i class="fa fa-facebook"></i></a>
                                    </li>
                                {% endif %}
                                {% if team_member.linkedin %}
                                    <li><a href="{{ team_member.linkedin }}"><i class="fa fa-linkedin"></i></a>
                                    </li>
                                {% endif %}
                                {% if team_member.github %}
                                    <li><a href="{{ team_member.github }}"><i class="fa fa-github"></i></a>
                                    </li>
                                {% endif %}
                                {% if team_member.stack_overflow %}
                                    <li><a href="{{ team_member.stack_overflow }}"><i class="fa fa-stack-overflow"></i></a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <p class="large text-muted">
                        {{ page.team_blurb }}
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endif %}