{% if option.show_timeline %}
    <section id="timeline">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">{{ option.timeline_title }}</h2>
                    <h3 class="section-subheading text-muted">{{ option.timeline_subtitle }}</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <ul class="timeline">
                        {% for timeline_item in option.timeline_items %}
                            {% if loop.index is even %}
                                {% set timeline_class = "timeline-inverted" %}
                            {% endif %}
                            <li class="{{ timeline_class }}">
                                <div class="timeline-image">
                                    <img class="img-circle img-responsive" src="{{TimberImage(timeline_item.image).src}}" alt="Timeline image for {{ timeline_item.title }}">
                                </div>
                                <div class="timeline-panel">
                                    <div class="timeline-heading">
                                        <h4>{{ timeline_item.heading }}</h4>
                                        <h4 class="subheading">{{ timeline_item.subheading }}</h4>
                                    </div>
                                    <div class="timeline-body">
                                        <p class="text-muted">
                                            {{ timeline_item.description }}
                                        </p>
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                        <li class="timeline-inverted">
                            <div class="timeline-image">
                                <h4>
                                    {{ option.timeline_cta }}
                                </h4>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endif %}