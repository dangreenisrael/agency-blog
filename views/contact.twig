
{% if theme.theme_mod('show_contact') %}
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">
                        {{ theme.theme_mod('contact_title', 'Contact Us') }}
                    </h2>
                    <hr class="small">
                    <div class="section-subheading text-muted">
                        {{ theme.theme_mod('contact_blurb') }}
                    </div>
                </div>
            </div>
            <div class="row hide-mobile">
                <div class="col-xs-6 col-md-4 col-md-offset-2">
                    <i class="fa fa-phone fa-3x"></i>
                    <p class="centered">
                        <a href="tel:{{ theme.theme_mod('public_phone_number_for_dialing') }}">
                            {{ theme.theme_mod('public_phone_number_display') }}
                        </a>
                    </p>
                </div>
                <div class="col-xs-6 col-md-4">
                    <i class="fa fa-envelope-o fa-3x"></i>
                    <p class="centered">
                        <a href="mailto:{{ theme.theme_mod('public_email') }}">
                            {{ theme.theme_mod('public_email') }}
                        </a>
                    </p>
                </div>
            </div>
            <div class="row show-mobile">
                <a href="tel:{{ theme.theme_mod('public_phone_number_for_dialing') }}">
                    <div  class="btn btn-primary col-xs-4 col-xs-offset-1">
                        <i class="fa fa-phone fa-3x"></i><br>
                        <span>
                            {{ theme.theme_mod('phone_mobile_text') }}
                        </span>
                    </div>
                </a>
                <a href="mailto:{{ theme.theme_mod('public_email') }}">
                    <div class="col-xs-4 col-xs-offset-2 btn btn-primary">
                        <i class="fa fa-envelope-o fa-3x"></i><br>
                        <span>
                            {{ theme.theme_mod('email_mobile_text') }}
                        </span>
                    </div>
                </a>
            </div>
        </div>
    </section>
{% endif %}