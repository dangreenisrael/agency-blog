{% if option.show_services %}
    <section id="services" class="alternating-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">{{ option.services_title }}</h2>
                    <h3 class="section-subheading text-muted">{{ option.services_subtitle }}</h3>
                </div>
            </div>
            <div class="row text-center">
                {% for service in option.services %}
                    <div class="{{ loop.length|bootstrapCol }}">
                                <span class="fa-stack fa-4x">
                                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                                    <i class="fa {{ service.icon }} fa-stack-1x fa-inverse"></i>
                                </span>
                        <h4 class="service-heading">
                            {{ service.name }}
                        </h4>
                        <p class="text-muted">
                            {{ service.description }}
                        </p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endif %}