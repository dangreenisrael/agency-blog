{% if option.show_team %}
    <section id="team" class="alternating-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">{{ option.team_title }}</h2>
                    <span class="section-subheading text-muted">{{ option.team_subtitle }}</span>
                </div>
            </div>
            <div class="">
                {% for team_member in option.team_members %}
                    <div class="team-member">
                        {% if loop.index is odd %}
                            <div class="col-md-4 ">
                                <img src="{{ TimberImage(team_member.picture).src }}" class="img-responsive img-circle alternating-border" alt="Profile picture for {{ team_member.name }}">
                                <h4>{{ team_member.name }}</h4>
                                <p class="text-muted">{{ team_member.role }}</p>
                            </div>
                        {% endif %}
                        <div class="col-md-7 ">

                            {{ team_member.bio }}
                            <ul class="list-inline social-buttons">
                                {% if team_member.twitter %}
                                    <li><a href="{{ team_member.twitter }}"><i class="fa fa-twitter"></i></a>
                                    </li>
                                {% endif %}
                                {% if team_member.facebook %}
                                    <li><a href="{{ team_member.facebook }}"><i class="fa fa-facebook"></i></a>
                                    </li>
                                {% endif %}
                                {% if team_member.linkedin %}
                                    <li><a href="{{ team_member.linkedin }}"><i class="fa fa-linkedin"></i></a>
                                    </li>
                                {% endif %}
                                {% if team_member.github %}
                                    <li><a href="{{ team_member.github }}"><i class="fa fa-github"></i></a>
                                    </li>
                                {% endif %}
                                {% if team_member.stack_overflow %}
                                    <li><a href="{{ team_member.stack_overflow }}"><i class="fa fa-stack-overflow"></i></a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                        {% if loop.index is even %}
                            <div class="col-md-1"></div>
                            <div class="col-md-4 verticallyCenter">
                                <img src="{{ TimberImage(team_member.picture).src }}" class="img-responsive img-circle alternating-border" alt="Profile picture for {{ team_member.name }}">
                                <h3>{{ team_member.name }}</h3>
                                <p class="text-muted">{{ team_member.role }}</p>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <p class="large text-muted">
                        {{ option.team_blurb }}
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endif %}