{% block html_head_container %}
	{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

{% if isFrontPage %}
	{% set brand_link = "#page-top" %}
{% else %}
	{% set brand_link = "/" %}
	{% set menu_slash = "/" %}
{% endif %}


<body class="{{body_class}} {{ white_header }}" data-template="base.twig">
	<!-- Navigation -->
	<nav id="nav-main" role="navigation" class="navbar navbar-default navbar-fixed-top nav-main">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header page-scroll">
				<button type="button" class="navbar-toggle" id="toggleMenu">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				{% if theme.theme_mod('header_logo') %}
					<a class="navbar-brand page-scroll logo" href="/">
						<img src="{{theme.theme_mod('header_logo')}}">
					</a>
				{% else %}
					<a class="navbar-brand page-scroll text" href="/">
						{{ function('bloginfo','name') }}
					</a>
				{% endif %}
			</div>
			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="navbar-mobilized">
				<ul class="nav navbar-nav navbar-right">
					{% block menu_items %}
						{% include "menu-items.twig" %}
						{% if  theme.theme_mods.show_main_menu %}
							{% for item in menu.get_items %}
								<li class="{{item.classes | join(' ')}}">
									<a href="{{item.get_link}}" class="page-scroll"> {{item.title}}</a>
									{% include "menu.twig" with {'menu': item.get_children} %}
								</li>
							{% endfor %}
						{% endif %}
					{% endblock %}
				</ul>
			</div>
			<!-- /.navbar-collapse -->
	</nav>

	<div id="content" role="main" class="content-wrapper">
		<div class="wrapper {{sidebar_class}}">
			{% block content %}
				Sorry, no content
			{% endblock %}
		</div>
		{% if sidebar %}
			<aside class="layout-sidebar">
				{{sidebar}}
			</aside>
		{% endif %}
	</div>
	{% block footer %}
		<footer id="footer">
			{% include 'footer.twig' %}
		</footer>
		{{ function('wp_footer') }}
	{% endblock %}



	<!-- Contact Form JavaScript -->

	<!-- Custom Theme JavaScript -->
	<div id="backdrop" class="modal-backdrop fade" style="display: none;"></div>
</body>
</html>
