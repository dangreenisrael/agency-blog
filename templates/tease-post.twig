{% extends "tease.twig" %}

{% block content %}
	<article class="post-preview">
		<a href="{{ post.link }}">
			<h2 class="post-title">
				{{post.title}}
			</h2>
			<h3 class="post-subtitle">
				{{post.subtitle}}
			</h3>
		</a>
		<p class="post-meta">Posted to the series <a href="#">{{post.category}}</a> on {{ post.post_date|date}}</p>
	</article>
{% endblock %}
